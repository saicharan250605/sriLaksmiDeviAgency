<% layout("/layouts/boilerPlate") %>
<body>
    <div id="login_or_sign_up_form_holder">
        <form action="/<%=purpose%>" method="post" id="login_or_sign_up_form">
            <label for="login_or_sign_up_username">Username</label>
            <input type="text" placeholder="Enter username" name="username" id="login_or_sign_up_username" required>
            <label for="login_or_sign_up_password">Password</label>
            <input type="password" placeholder="Enter password" name="password" id="login_or_sign_up_password" required>
            <button id="login_or_sign_up_submit_btn"><%=purpose%></button>
        </form>
    </div>
</body>